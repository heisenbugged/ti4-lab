{
  "name": "ti4-lab",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "tsx ./server.ts",
    "discord:deploy": "tsx ./app/discord/deployCommands.ts",
    "build": "react-router build",
    "start": "cross-env NODE_ENV=production tsx ./server.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "db:migrations": "drizzle-kit generate --dialect=sqlite --out=./app/drizzle/migrations --schema=./app/drizzle/schema.server.ts",
    "db:backup": "flyctl ssh sftp get -a ti4-lab /data/sqlite.db ~/Downloads/ti4-lab_$(date +'%d_%m_%Y').db",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "sync-voices": "node sync-voices-wrangler.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@dnd-kit/core": "^6.1.0",
    "@mantine/core": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "@mantine/notifications": "^8.3.10",
    "@react-router/dev": "^7.11.0",
    "@react-router/express": "^7.11.0",
    "@react-router/fs-routes": "^7.11.0",
    "@react-router/node": "^7.11.0",
    "@tabler/icons-react": "^3.36.1",
    "@tanstack/react-table": "^8.21.3",
    "@types/howler": "^2.2.12",
    "better-sqlite3": "^10.0.0",
    "cross-env": "^7.0.3",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^5.2.1",
    "howler": "^2.2.4",
    "immer": "^10.1.1",
    "isbot": "^4.1.0",
    "jotai": "^2.8.3",
    "jotai-zustand": "^0.4.0",
    "music-metadata-browser": "^2.5.11",
    "posthog-js": "^1.249.0",
    "querystring": "^0.2.1",
    "react": "^19",
    "react-dom": "^19",
    "react-loading-indicators": "^0.2.3",
    "react-qr-code": "^2.0.15",
    "react-router": "^7.11.0",
    "remix-utils": "^7.6.0",
    "skia-canvas": "^3.0.8",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.5",
    "tsx": "^4.12.0",
    "uuid": "^9.0.1",
    "zustand": "^4.5.2"
